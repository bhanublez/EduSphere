<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardAssignment"
            android:layout_width="match_parent"

            android:background="@drawable/curve_bg_ek1"
            android:layout_height="358dp"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="34dp">


            <TextView
                android:id="@+id/last_submission_date_3_ek1"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="Marks"
                android:textSize="14sp"

                app:layout_constraintEnd_toEndOf="@+id/last_submission_date_3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/last_submission_date_3" />

            <EditText
                android:id="@+id/subNaam_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:hint="Subject Name"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/teacherName_e"
                app:layout_constraintStart_toStartOf="@+id/teacherName_e"
                app:layout_constraintTop_toBottomOf="@+id/teacherName_e" />

            <TextView
                android:id="@+id/ass_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="Assigned Date"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subNaam_e" />

            <TextView
                android:id="@+id/last_submission_date_3"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="8dp"

                android:text="Exam Date"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/ass_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ass_date" />

            <EditText
                android:id="@+id/assDate_e"
                android:layout_width="154dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:hint="yyyy-MM-dd"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ass_date"
                app:layout_constraintTop_toBottomOf="@+id/subNaam_e" />

            <EditText
                android:id="@+id/exam_date_e"
                android:layout_width="154dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="yyyy-MM-dd"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/assDate_e"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/assDate_e"
                app:layout_constraintTop_toBottomOf="@+id/assDate_e" />

            <EditText
                android:id="@+id/marks_e"
                android:layout_width="154dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/assDate_e"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/assDate_e"
                app:layout_constraintTop_toBottomOf="@+id/exam_date_e" />

            <EditText
                android:id="@+id/teacherName_e"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="42dp"
                android:hint="Teacher Name"
                android:textColor="@color/science_color"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="15dp" />

            <TextView
                android:id="@+id/txtarea_e"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"

                android:layout_marginRight="20dp"
                android:text="Topic"
                app:layout_constraintEnd_toEndOf="@+id/marks_e"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/subNaam_e"
                app:layout_constraintTop_toBottomOf="@+id/last_submission_date_3_ek1" />

            <EditText
                android:id="@+id/txt_area_e"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"

                android:layout_marginRight="20dp"

                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/txtarea_e"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtarea_e" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</RelativeLayout>
