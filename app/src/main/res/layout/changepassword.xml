<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/blue_b_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/blue_b_1"
        android:scaleType="fitXY"
        android:src="@drawable/blue_b_1_ek1"
        tools:layout_editor_absoluteY="37dp" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="62dp">
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="18dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="backArrow"
            android:src="@drawable/arrowback" />
        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/back_icon"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="61dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/heading_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/_bg__heading_content_ek1"
            android:layout_width="189dp"
            android:layout_height="77dp"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="-222dp"
            android:background="@drawable/_bg__heading_content_ek1_shape" />

        <TextView
            android:id="@+id/hi_student"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Change Password"
            android:textColor="@color/_bg___02_login_ek2_color"
            android:textSize="40dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="392dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/curve_bg_ek1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-5dp">


            <RelativeLayout
                android:id="@+id/mobile_number_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/oldPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:hint="Old Password"
                    android:textColor="@color/oval_color"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pass_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_number_email"
                android:layout_alignStart="@+id/mobile_number_email"
                android:layout_alignEnd="@+id/mobile_number_email"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp">

                <EditText
                    android:id="@+id/newPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:textColor="@color/oval_color"
                    android:textSize="16sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/confirm_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass_field"
                android:layout_alignStart="@+id/mobile_number_email"
                android:layout_alignEnd="@+id/mobile_number_email"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp">

                <EditText
                    android:id="@+id/confirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="@color/oval_color"
                    android:textSize="16sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tt"
                android:layout_width="326dp"
                android:layout_height="46dp"
                android:layout_below="@id/confirm_pass"
                android:layout_alignStart="@+id/pass_field"
                android:layout_alignEnd="@+id/pass_field"
                android:layout_marginStart="11dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="44dp"
                android:background="@color/science_color">


                <TextView
                    android:id="@+id/sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Change"
                    android:textAlignment="center"
                    android:textColor="@color/_bg___02_login_ek2_color"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>